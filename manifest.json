{
  "manifest_version": 2,
  "name": "Holerabbit",
  "version": "0.1.0",
  "description": "Capture web pages to your local knowledge graph",
  "author": "Ekats",
  "homepage_url": "https://github.com/Ekats/mycelica-firefox",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "nativeMessaging",
    "webNavigation",
    "tabs",
    "notifications",
    "*://*.wikipedia.org/*",
    "*://*.wikimedia.org/*"
  ],

  "optional_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Holerabbit",
    "default_popup": "popup/popup.html"
  },
  
  "sidebar_action": {
    "default_title": "Holerabbit",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/icon-32.png"
  },
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "mycelica@ekats.dev",
      "strict_min_version": "91.0"
    }
  }
}
